{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [ "dom", "esnext" ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./", // all paths are relative to the baseUrl
    "paths": {
      "~/*": [ "*" ] // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
    }
  }
}
